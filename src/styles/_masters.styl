bg-grey()
	background-color #d3d3d3
	color #0f0f0f
bg-white()
	background-color #f5f5f5
	color #000000
bg-black()
	background-color #0f0f0f
	color #ffffff

header-padding()
	padding-top 30px

body
	position relative
	height 100vh //todo repair stupid jade page bug

.content
	header-padding()
	bg-white()

	&.left-side
		padding-left sidebar-width
	&.right-side
		padding-right sidebar-width

.header
	bg-black()
	width 100%
	position fixed
	top 0
	left 0
	height 30px
	z-index 4

.footer
	width 100%
	bg-black()
	position absolute
	bottom -100px
	left 0px
	height 100px

.sidebar
	header-padding()
	bg-white()
	box-sizing border-box
	height 100%
	position absolute
	top 0
	width sidebar-width

	&.left
		border-right 1px dashed #000000
		left 0
	&.right
		border-left 1px dashed #000000
		left initial
		right 0