sidebar-width = 280px

.blackout
	content ''
	width 100%
	height 100%
	position fixed
	top 0
	left 0
	z-index 2
	background-color rgba(0,0,0,.5)
	cursor pointer
	&.hide
		display none

.sidebar
	z-index 3

.sidebar-toggle
	display none
	position fixed
	top 30px
	left 30px
	cursor pointer
	z-index 4
	padding 11px 32px 17px 0px

	span,span:before,span:after
		content ''
		position absolute
		background-color #000000
		color #ffffff
		border-radius 1px
		height 5px
		width 35px
		display block
		cursor pointer

	span:before
		top -10px
	span:after
		bottom -10px

.sidebar-toggle.active
	span
		background-color transparent

		&:before
			top 0
			transform rotate(45deg)

		&:after
			top 10px
			transform translateY(-10px) rotate(-45deg)



@media (max-width 1024px)

	.grid-sidebar,.grid-sidebar.double
		.content
			padding-right 0

	.sidebar.right
		display none


@media (max-width 720px)

	.sidebar-toggle
		display block

	.grid-sidebar
		.content
			padding-left 0

	.sidebar.left
		&.hide
			left -(sidebar-width)