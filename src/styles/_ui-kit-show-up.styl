#ui-kit
	padding 3%

	.kit-header
		margin 2% 0 1%
		padding-bottom 1%

		&.head-1
			border-bottom 2px solid #000

		&.text-l
			border-bottom 1px solid black

		&.text-m
			border-bottom 1px solid rgba(0,0,0,.2)

	.color
		display block
		width 100%
		height 90px
		line-height 90px
		padding-left 15px

		&.white
			background-color primary-white

		&.blue
			background-color section-blue

		&.light-grey
			background-color light-grey

		&.dark-grey
			background-color dark-grey

		&.red-flag
			background-color red-flag



	.demo-button-label
		margin 1% 0


	.input
		margin 1% 0