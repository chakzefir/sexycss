/* @group Base */
.chosen-container
	min-width 250px
	position relative
	display inline-block
	vertical-align middle
	zoom 1
	background-color darken-grey

	*
		box-sizing border-box

	.chosen-drop
		position: absolute;
		top: 100%;
		left: 0;
		z-index: 1010;
		width: 100%;
		background-color darken-grey
		color #ffffff

	&.chosen-with-drop .chosen-drop .chosen-results
		max-height 240px

	a
		cursor pointer

	.search-choice .group-name, .chosen-single .group-name
		margin-right: 4px;
		overflow: hidden;
		white-space: nowrap;
		text-overflow: ellipsis;
		font-weight: normal;
		color: #999999;

	.search-choice .group-name:after, .chosen-single .group-name:after
		content: ":";
		padding-left: 2px;
		vertical-align: top;



.chosen-container-single .chosen-single
	position: relative;
	display: block;
	overflow: hidden;
	padding: 0 0 0 10px;
	height: 40px;
	text-decoration: none;
	white-space: nowrap;
	line-height: 40px;
	color #ffffff
	border none
	raleway()


	span
		display: block;
		overflow: hidden;
		margin-right: 26px;
		text-overflow: ellipsis;
		white-space: nowrap;


.chosen-container-single .chosen-single-with-deselect span {
	margin-right: 38px;
}


.chosen-container-single .chosen-single div {
	position: absolute;
	top: 40%;
	right: 10px;
	display: block;
	width: 10px;
	height: 7px;
}
.chosen-container-single .chosen-single div b {
	display: block;
	width: 100%;
	height: 100%;
	background: url('../img/dropdown-arrow.svg') no-repeat 0 0;
}

.chosen-container-single .chosen-drop {
	margin-top: -1px;
	border-top 1px solid dark-grey
	background-clip: padding-box;
}
.chosen-container-single.chosen-container-single-nosearch .chosen-search {
	position: absolute;
	left: -9999px;
}


//DROPDOWN LIST
.chosen-container .chosen-results {
	position: relative;
	overflow-x: hidden;
	overflow-y: auto;
	max-height 0
	-webkit-overflow-scrolling: touch;
	transition()
}
.chosen-container .chosen-results li {
	display: none;
	margin: 0;
	padding: 0 10px;
	list-style: none;
	font-size text-m
	line-height: 40px;
	word-wrap: break-word;
	-webkit-touch-callout: none;
}

.chosen-container .chosen-results li
	clear right
	&:after
		float right
		content attr(data-value)
		display block

.chosen-container .chosen-results li.active-result {
	display: list-item;
	cursor: pointer;
}
.chosen-container .chosen-results li.disabled-result {
	display: list-item;
	color: #ccc;
	cursor: default;
}
.chosen-container .chosen-results li.highlighted {
	background-color: firm-blue;
	color: white;
}
.chosen-container .chosen-results li.no-results {
	color: #777;
	display: list-item;
	background: #f4f4f4;
}
.chosen-container .chosen-results li.group-result {
	display: list-item;
	font-weight: bold;
	cursor: default;
}
.chosen-container .chosen-results li.group-option {
	padding-left: 15px;
}
.chosen-container .chosen-results li em {
	font-style: normal;
	text-decoration: underline;
}



.chosen-container-active.chosen-with-drop .chosen-single div {
	transform rotate(180deg)
}


.chosen-disabled {
	opacity: 0.5 !important;
	cursor: default;
}
.chosen-disabled .chosen-single {
	cursor: default;
}
.chosen-disabled .chosen-choices .search-choice .search-choice-close {
	cursor: default;
}